{% extends 'back.html.twig' %}

{% block title %}Oeuvres{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="row">
                        <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                            <h6 class="text-white text-capitalize ps-3">Oeuvres</h6>
                        </div>
                    </div>
                            <table class="table align-items-center mb-0">
                                <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nom</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Description</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Prix</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Quantite</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Certificat</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Imagge</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Quantite</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for o in oeuvrearts %}
                                    <tr>
                                        <td>{{ o.nom }}</td>
                                        <td>{{ o.description }}</td>
                                        <td>{{ o.prix }}</td>
                                        <td>{{ o.quantite }}</td>
                                        <td>{{ o.certif }}</td>
                                        <td><img src="{{ asset('Upload/')}}{{ o.image }}" width="100" class="img-circle" /></td>
                                        <td>{{ o.idCat.description }}</td>

                                        <td>
                                            <a class="btn btn-primary" href="{{ path('app_oeuvreart_edit', {'idoeuvre': o.idoeuvre}) }}">edit</a>
                                            <a class="btn btn-danger"href="{{ path('deleteouevre', {'id': o.idoeuvre}) }}">Delete</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="3">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
        </div>
    </div>

{% endblock %}